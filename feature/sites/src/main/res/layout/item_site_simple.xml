<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_margin="4dp"
    android:background="@drawable/item_building_background"
    >

    <ImageView
        android:id="@+id/iv_building"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:src="@drawable/placeholder"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />
    <TextView
        android:id="@+id/tv_building_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/iv_building"
        android:textSize="16dp"
        android:textStyle="bold"
        tools:text="БС-2345"
        />

    <TextView
        android:id="@+id/tv_creation_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:textColor="@color/color_on_item_building"
        tools:text="25.12.2023"
        />
    <TextView
        android:id="@+id/tv_address_building"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:layout_marginEnd="36dp"
        app:layout_constraintTop_toBottomOf="@id/tv_building_name"
        app:layout_constraintStart_toEndOf="@id/iv_building"
        android:textSize="12dp"
        android:textColor="@color/color_on_item_building"
        tools:text="респ. Коми, п. Верхние Зубки, ул. Пономарева, 45"
        />

    <TextView
        android:id="@+id/tv_building_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        app:layout_constraintTop_toBottomOf="@id/tv_address_building"
        app:layout_constraintStart_toEndOf="@id/iv_building"
        app:layout_constraintEnd_toStartOf="@id/tv_building_height"
        android:textColor="@color/color_on_item_building"
        android:textSize="12dp"
        android:textFontWeight="800"
        tools:text="Башня: "
        />

    <TextView
        android:id="@+id/tv_building_height"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="4dp"
        app:layout_constraintTop_toBottomOf="@id/tv_address_building"
        app:layout_constraintStart_toEndOf="@id/tv_building_type"
        android:textColor="#C51162"
        android:textFontWeight="800"
        android:textSize="12dp"
        tools:text="72.5м"
        />

    <!--<TextView
        android:id="@+id/tv_employee"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        app:layout_constraintStart_toEndOf="@id/iv_building"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:text="Карасев М"
        />-->
    <TextView
        android:id="@+id/tv_measures_done_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:textSize="12dp"
        app:layout_constraintTop_toTopOf="@id/iv_checked"
        app:layout_constraintEnd_toStartOf="@id/iv_checked"
        android:text="@string/measures_done_text"/>

    <TextView
        android:id="@+id/tv_measures_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:textSize="12dp"
        app:layout_constraintBottom_toBottomOf="@id/iv_checked"
        app:layout_constraintEnd_toStartOf="@id/iv_checked"
        app:layout_constraintTop_toBottomOf="@id/tv_measures_done_text"
        tools:text="30.12.2023"/>

    <ImageView
        android:id="@+id/iv_checked"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        app:layout_constraintTop_toBottomOf="@id/tv_building_height"
        app:layout_constraintEnd_toEndOf="parent"
        android:src="@drawable/checkmark_svgrepo_com"
        />
</androidx.constraintlayout.widget.ConstraintLayout>