<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="TmBarsTheme" parent="Theme.MaterialComponents.Light">
        <item name="colorPrimary">@color/color_primary</item>
        <item name="colorOnPrimary">@color/color_on_primary</item>
        <item name="colorSurface">@color/color_surface</item>
        <item name="colorControlNormal">@color/color_on_primary</item>
        <item name="itemTextColor">@color/color_accent</item>
        <item name="editTextColor">@color/color_on_surface</item>
    </style>

    <!--ThemeOverlay.MaterialComponents.Dark.ActionBar-->

    <style name="TmToolbar" parent="Widget.MaterialComponents.Toolbar.PrimarySurface">
        <item name="backgroundColor">@color/color_primary</item>
        <item name="titleTextColor">@color/color_on_primary</item>
        <item name="contentInsetStartWithNavigation">0dp</item>
        <item name="android:fontFamily">@font/gost_clan_gradient</item>
    </style>

    <style name="MainMenuStyle" parent="Theme.MaterialComponents.Light">
        <item name="popupMenuBackground">@color/color_primary</item>
        <item name="android:textColor">@color/color_on_surface</item>
        <!--<item name="fontFamily">@font/calculator</item>-->
    </style>

    <style name="BottomNavigation" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!--<item name="android:backgroundTint">?attr/colorOnPrimary</item>-->
        <item name="itemBackground">@color/color_container</item>
        <item name="itemIconTint">@color/tint_color</item>
        <item name="itemTextColor">@color/tint_color</item>
        <item name="android:backgroundTint">@color/tint_color</item>

    </style>
</resources>

